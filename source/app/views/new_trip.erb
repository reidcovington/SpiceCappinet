<div id="content">
  <div id="new-details">
  <h1>New Trip</h1>

  <form id="new-trip" method="post" action="/trips/new">
    <label class="label" for="email">Destination</label>
    <input id="destination_name" type="text" name="destination_name" placeholder="Where are you going?" required>
    <br>

    <label class="label" for="name">Duration</label>
    <input id="trip_duration" type="text" name="trip_duration" placeholder="How long are you going for?" required>
    <br>


    <label class="label" for="password">Completed</label>
    <input id="trip_completed" type="text" name="trip_completed" placeholder="true or false?" required>
    <br>

    <div class="submit"><input id="log-trip" type="submit" value="Log Trip!"></div>
  </form>
  </div>
</div>
